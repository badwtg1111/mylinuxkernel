/*
 * å‘æŒ‡å®šä¸²å£FIFOå‘é€æ•°æ®
 * Input: 	port:	serial number
 *			c:		send data
 * */
u16 gm814x_send_char(u8 port, u8 c)
{
	u8 ch;
	u16 revdata;
	
	ch = 0x80;
	ch = ch | (port << 3);
	revdata = spi_send16(ch, c);

#ifdef _DEBUG_GM814X
		printk(KERN_INFO "gm814x_send_char:0x%x\n", revdata);
#endif
	
	return revdata;
}

