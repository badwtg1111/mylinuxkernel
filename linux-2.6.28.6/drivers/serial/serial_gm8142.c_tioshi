/*
 * åˆå§‹åŒ–uart_portç»“æ„ä½“å’Œè°ƒç”¨uart_add_one_port()æ·»åŠ ç«¯å£
 * */
static void gm814x_init_ports(void)
{
	int i;
	static int 	first = 1;
	struct uart_port *port;
	
#ifdef _DEBUG_GM814X
	printk(KERN_INFO "Initialize the serial port, init ports ,uart_add_one_port\n");
#endif

	if (!first)
		return;
	
	first = 0;

	for (i = 0; i < NR_PORTS; i++)
	{
		port 			= &gm814x_ports[i];
		port->uartclk  	= 3686400;								//æ—¶é’Ÿä¸º3.6864MHz
		port->ops      	= &gm814x_pops;							//ä¸²å£ç«¯å£æ“ä½œå‡½æ•°é›†
		port->fifosize 	= 16;									//fifosize 16
		port->iobase  	= (i + 1) * 1024;						//å„ç«¯å£åœ°å€æ˜ å°„åçš„åœ°å€
		port->irq     	= IRQ_GM814X;							//ä¸­æ–­å·115ï¼Œä¹Ÿå°±æ˜¯å¤–éƒ¨ä¸­æ–­4
		port->iotype  	= UPIO_PORT;							//IOè®¿é—®æ–¹å¼, IOç«¯å£
		port->flags   	= UPF_BOOT_AUTOCONF | UPF_SHARE_IRQ;	//å…±äº«ä¸­æ–­
		port->line    	= i;									//ç«¯å£çš„å·ç ï¼Œä»0å¼€å§‹

		uart_add_one_port (&gm814x_reg, &gm814x_ports[i]);		//æ·»åŠ ç«¯å£
	}
}

