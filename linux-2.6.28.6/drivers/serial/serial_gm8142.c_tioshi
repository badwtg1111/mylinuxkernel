u16 gm814x_read_fifo_data(void)
{
	u16 revdata;
	
	revdata = spi_send16(0x00, 0x00);

#ifdef _DEBUG_GM814X
		//printk(KERN_INFO"gm814x_read_fifo_data:0x%x\n", revdata);
