/*
 * spi write data
 * Input:    hign: 	hign 8 bit data
 *	 	 	 low:	low 8 bit data
 * Output:   read u16 data
 * */
static u16 spi_send16(u8 hign, u8 low)
{
    u32 	i = 0;
    u8 		save_data = 0;
    u32	 	count = 0;
    u16 	data = 0;
	u8		line;
	
	SPI_TXRX_ON;
	SPI_CS_LOW;
	Delay(5);		//å»¶æ—¶æ—¶é—´å‚è€ƒ814xæ•°æ®æ‰‹å†Œçš„è¦æ±‚

    clear_info();
    write_byte(hign);	
	
	udelay(10);

    write_byte(low);
	if ((hign & 0xc0) == 0x80)
	{
		line = (hign >> 3) & 0x03;
		udelay(g_spi_send_delay[line]);
	}
	else
	{
		udelay(15);
		//udelay(g_spi_recv_delay);
	}


    count = SPI_RX_FIFO_LVL;

    if(count == 2)
    {
        for(i = 0; i < 2; i++)
        {
            save_data = read_byte();
            data = (data << 8) + (u16)save_data;
        }
    }
    else
    {
        data = 0;
    }
	
    SPI_CS_HIGH;
    SPI_TXRX_OFF;	

    Delay(10);  //å»¶æ—¶æ—¶é—´å‚è€ƒ814xæ•°æ®æ‰‹å†Œçš„è¦æ±‚

    return data;
}

/*
 * å‘æŒ‡å®šçš„ä¸²å£åŠŸèƒ½è®¾ç½®å¯„å­˜å™¨å†™é…ç½®
 * Input:    port:	è¡¨ç¤ºè®¾ç½®çš„ä¸²å£å·
 *	 	 	 high:	è¡¨ç¤ºç»™é…ç½®å¯„å­˜å™¨çš„é«˜ä½å­—èŠ‚(ä½ä¸‰ä½æœ‰æ•ˆ)
 *	 	 	 low:	lowè¡¨ç¤ºç»™é…ç½®å¯„å­˜å™¨çš„ä½ä½å­—èŠ‚
 * Output:   revdata: 2 byte read from 814x
 * */
u16 gm814x_write_reg(u8 port, u8 high, u8 low)
{
	u8 		ch;
	u16 	revdata;
	
	high 	= high & 0x07;
	ch 		= 0xc0 | (port << 3);
	high 	= high | ch;
	revdata = spi_send16(high,low);
	udelay(10);
	
	return revdata;
}

/*
 * è¯»å‡ºæŒ‡å®šä¸²å£çš„åŠŸèƒ½è®¾ç½®å¯„å­˜å™¨å†…å®¹
 * Input:    port:	è¡¨ç¤ºè®¾ç½®çš„ä¸²å£å·
 *	 	 	 high:	è¡¨ç¤ºç»™é…ç½®å¯„å­˜å™¨çš„é«˜ä½å­—èŠ‚(ä½ä¸‰ä½æœ‰æ•ˆ)
 *	 	 	 low:	lowè¡¨ç¤ºç»™é…ç½®å¯„å­˜å™¨çš„ä½ä½å­—èŠ‚
 * Output:   revdata: 2 byte read from 814x
 * */
u16 gm814x_read_reg(u8 port, u8 high, u8 low)
{
	u16 	revdata;
	u8 		ch;
	
	high 	= high & 0x07;
	ch 		= 0x40 | (port << 3);
	high 	= high | ch;
	revdata = spi_send16(high, low);
	
	return revdata;
}

