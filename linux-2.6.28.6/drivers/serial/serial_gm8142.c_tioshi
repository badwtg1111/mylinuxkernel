static void write_byte(u8 data)
{
	SPI_TX_DATA = data;

	while(!SPI_TX_DONE);
}

static u8 read_byte(void)
{
	u8 ch = 0;

	ch = (u8)SPI_RX_DATA;

	return ch;
}

