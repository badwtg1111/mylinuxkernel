static void spi_reset(void)
{
#ifdef _DEBUG_GM814X
		printk(KERN_INFO "2.3----spi_reset\n");
#endif
	//å¸¦æœ‰æ—¶é’Ÿå»¶æ—¶çš„å¤ä½
	CH_CFG &= ~(0x3f);		// 	clear register
	CH_CFG |= (1 << 5);		//	software reset
	mdelay(0xff);
	CH_CFG &= ~(1 << 5);	//	software reset
}

